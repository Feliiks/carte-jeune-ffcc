generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  id                Int       @id @default(autoincrement())
  uid               String    @unique(map: "users_uid_uindex") @db.VarChar(100)
  firstname         String    @db.VarChar(50)
  lastname          String    @db.VarChar(50)
  birthdate         DateTime? @db.Date
  email             String    @db.VarChar(100)
  tel               Int?
  city              String    @db.VarChar(50)
  post_code         Int
  student           Boolean   @default(false)
  password          String    @db.VarChar(100)
  password_token    String?   @db.VarChar(255)
  email_token       String?   @db.VarChar(255)
  is_email_verified Boolean   @default(false)
}

model youth_card_requests {
  id             Int      @id @default(autoincrement())
  user_id        Int      @unique(map: "youth_card_requests_user_id_uindex")
  user_tel       String   @db.VarChar(20)
  user_birthdate DateTime @db.Date
  user_student   Boolean  @default(false)
}

model youth_cards {
  id              Int      @id @default(autoincrement())
  user_id         Int      @unique(map: "youth_cards_user_id_uindex")
  issue_date      DateTime @db.Date
  expiration_date DateTime @db.Date
}
